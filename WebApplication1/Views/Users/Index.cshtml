@model IEnumerable<WebApplication1.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <button class="border-1"><a asp-controller="Users" asp-action="New" class="text-decoration-none text-dark">New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                    <button class="border-1"><a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none text-dark">Edit</a></button> |
                    <button class="border-1"><a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">Details</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
